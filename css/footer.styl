footer {
  position: absolute;
  z-index: 10;
  bottom: 0;
  width: 100%;
  height: 117px;

  &:hover {
    ul {
      bottom: 0;
      opacity: 1;
      transition: opacity .25s ease-in-out;
    }
  }

  ul {
    opacity: 0;
    transition: opacity 5s ease-in-out;
    display: inline-block;
    width: 100%;
    position: relative;
    margin: 0;
    padding: 0;

    &.start {
      bottom: 0;
      transition: bottom 0.25s ease-in-out;
    }

    li {
      float: left;
      width: (100/5)%;
      text-align: center;

      a {
        text-decoration: none;
        color: #FF4D4D;
        box-sizing: border-box;
        padding: 40px 0;
        display: block;
        font-size: 2em;
        text-shadow: 0 0 10px rgba(0,0,0,0.07);

        &.active {
          text-decoration: underline;
        }
      }

    }
  }
}