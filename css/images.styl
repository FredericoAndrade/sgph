.content {
  .container {
    &.film, &.photography {
      ul {
        width: 100%;
        padding: 30px;
        display: inline-block;
        margin: 0;

        li {
          background: #000;
          width: 100%
          float: left;
          height: 400px;
          list-style-type: none;

          &:hover {
            ul {
              opacity: 1;
              transition: opacity .1s ease-in-out;
            }
          }

          &:not(:last-of-type) {
            margin-bottom: 30px;
          }

          a {
            position: absolute;
            z-index: 10;
            display: inline-block;
            height: 400px;
            width: 100%;
          }

          ul {
            position: absolute;
            z-index: 0;
            opacity: 0;
            transition: opacity .1s ease-in-out;

            li {
              background: transparent;
              height: initial;
              display: inline-block;
              color: #fff;
            }
          }

          &#myth {
            background-image: url("../images/mythTrailerPicture.jpg");
            background-size: cover;
            background-position: center center;


          }

          &.photo {
            background-image: url("../images/My_Sad_Sadistic_Fantasy_Life_Picture.jpg");
            background-size: cover;
            background-position: center center;

            ul {
              li {
                color: black;
              }
            }
          }
        }
      }
    }
  }

  .videos, .photos {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 100;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.8);
    display: none;
    cursor: pointer;
  }

  .videos {
    .video {
      width: 90%;
      height: 90%;
      margin: 40px auto;
      background: #333;
      border-radius: 3px;
      display: none;
      cursor: initial;
      box-shadow: 0 0 30px rgba(0,0,0,0.4);

      &:hover {
        .close {
          opacity: 1;
          transition: opacity .2s ease-in-out;
        }
      }

      .close {
        width: 40px;
        height: 40px;
        float: right;
        position: absolute;
        z-index:100;
        right: 3%;
        top:4%;
        background-image: url("../images/close.png");
        background-size: cover;
        opacity: 0;
        transition: opacity .2s ease-in-out;
      }
    }
  }

  .photos {
    display: none;

    &:hover {
      .close {
        opacity: 1;
        transition: opacity .2s ease-in-out;
      }
    }

    .close {
      width: 40px;
      height: 40px;
      float: right;
      position: absolute;
      z-index:100;
      right: 3%;
      top: 4%;
      background-image: url("../images/close.png");
      background-size: cover;
      opacity: 1;
      transition: opacity .2s ease-in-out;
    }

    .navtext {
      color: white;
      text-decoration: none;
      text-transform: initial;
      margin: 0 auto -20 auto;
      display: block;
      width: 100%;
      text-align: center;
      padding: 20px 0 0 0;
    }

    .slick-slide .photo{
      max-height:800px;
      margin: 4% auto;
      cursor: initial;
    }
  }
}